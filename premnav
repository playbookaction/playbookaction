<body>

	<nav class="navMenu  border">
		<a id="update" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-user-pen"></i> Edit Account Information</a>
		<a id="discord" onclick="navigate(this.id)" href="#"> <i class="fa-brands fa-discord"></i> Open Discord</a>
		<a id="hardrockbet" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-guitar"></i> Open HardRockBet</a>
		<a id="draftkings" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-crown"></i> Open DraftKings</a>
		<a id="logout" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-right-from-bracket"></i> Logout</a>




	</nav>


	<script>

		let direction = "horizontal";
		if (direction === "vertical") {
			document.head.insertAdjacentHTML("beforeend", `<style>.navMenu a {display: block; text-align:left; margin:7px} i{width:15px; margin-right:5px} .navMenu{margin:3px}</style>`)
		}


		function navigate(id) {

			if (id == 'update')
				window.open("https://www.authpro.com/auth/playbookactionllc/?action=edit", '_blank').focus();

			else if (id == "discord")
				window.open("https://discord.com/channels/1245455393988149369/1296654771712823377", '_blank').focus();

			else if (id == "hardrockbet")
				window.open("https://app.hardrock.bet/", '_blank').focus();

			else if (id == "draftkings")
				window.open("https://sportsbook.draftkings.com/?_gl=1*1aakj4f*_gcl_au*NTMyOTAyNDgyLjE3MjIzMTE5NzU.*_ga*MTM5OTUyNDI3LjE3MjIzMTE5NzY.*_ga_QG8WHJSQMJ*MTcyOTM2OTM2Ny4yLjEuMTcyOTM2OTM5MC4zNy4wLjA.", '_blank').focus();

			else if (id == "logout")
				window.open("https://playbookaction.bet/", '_parent').focus();



		}
	</script>


